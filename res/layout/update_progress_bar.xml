<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/updateProgressLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/header_gradient"
    android:padding="48dp"
    android:translationZ="10dp">

    <TextView
        android:id="@+id/updateStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="sans-serif-medium"
        tools:text="512MB out of 1GB" />

    <ProgressBar
        android:id="@+id/updateProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/updateStats"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/updatePause"
        android:indeterminateDrawable="@drawable/progress_bg"
        android:progress="50"
        android:progressDrawable="@drawable/progress_bg" />

    <TextView
        android:id="@+id/updateProgressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateStats"
        android:layout_alignTop="@id/updateProgressBar"
        android:layout_alignEnd="@id/updateProgressBar"
        android:layout_alignBottom="@id/updateProgressBar"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:textColor="?android:attr/textColorPrimary"
        tools:text="50%" />

    <ImageButton
        android:id="@+id/updatePause"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_below="@id/updateStats"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="@color/deep_orange_A200"
        app:srcCompat="@drawable/ic_pause" />

</RelativeLayout>